{
  "name": "TossInvest Helper",
  "version": "1.1.5.2",
  "description": "토스증권 실수 줄이기",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["*://tossinvest.com/*"],
      "run_at": "document_start",
      "all_frames": true,
      "js": ["common.js", "new.js"],
      "css": ["new.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "./bottom-arrow.svg"
      ],
      "use_dynamic_url": true
    }
  ]
}
